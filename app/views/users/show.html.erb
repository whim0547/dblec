
<p id="notice"><%= notice %></p>


<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
  <div class="col-md-8">
    <% if @items.any? %>
      <h3>Items (<%= @items.count %>)</h3>
      <ol class="items">
        <%= render @items%>
      </ol>
      <%= will_paginate @items %>
    <% end %>
  </div>
</div>

